{
  "name": "jira-analytics-local",
  "version": "1.0.0",
  "description": "Local Jira Analytics Dashboard - Modular React setup",
  "main": "server.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "client": "vite",
    "server": "nodemon server.js",
    "start": "node server.js",
    "build": "vite build",
    "preview": "vite preview",
    "serve": "npx serve .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "docker:build": "docker build -t jira-analytics .",
    "docker:run": "docker run -p 3001:3001 -v ./data:/app/data jira-analytics",
    "docker:compose": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "recharts": "^2.15.4"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-react": "^7.27.1",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@vitejs/plugin-react": "^4.0.0",
    "babel-jest": "^29.7.0",
    "concurrently": "^8.2.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^7.1.4",
    "vite": "^4.3.9"
  },
  "keywords": [
    "jira",
    "analytics",
    "dashboard",
    "local",
    "react",
    "vite"
  ],
  "author": "Your Name",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0"
  }
}
